<%= form_with(model: booking, local: true) do |form| %>
  <%= render 'shared/error_messages', object: form.object %>

  <div class="form-group col-lg-5">
    <%= form.label :customer_name %>
    <%= form.text_field :customer_name, class: 'form-control' %>
  </div>

  <div class="form-group col-lg-5">
    <%= form.label :cleaner_name %>
    <%= form.text_field :cleaner_name, class: 'form-control' %>
  </div>

  <div class="form-group col-lg-5">
    <%= form.label :date %><br>
    <%= form.date_select :date , class: 'form-control'%>
  </div>

  <div class="form-group col-lg-5">
    <%= form.submit "Booking", class: "btn btn-primary" %>
  </div>
<% end %>
