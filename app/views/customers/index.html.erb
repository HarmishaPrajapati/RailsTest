<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>City</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name %></td><br><br>
        <td><%= customer.last_name %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.city_name %></td>
        <td><%= customer.date %></td>
        <td><%= customer.time%></td>
        <td><%= link_to 'Show', customer %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>
